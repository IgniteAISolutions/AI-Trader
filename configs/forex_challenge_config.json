{
    "agent_type": "BaseAgentForex",
    "market": "forex",

    "date_range": {
        "init_date": "2026-01-01",
        "end_date": "2026-12-31"
    },

    "challenge_config": {
        "enabled": true,
        "starting_balance": 20.0,
        "target_balance": 50000.0,
        "risk_percent_per_trade": 30.0,
        "target_pips": 20,
        "max_spread_pips": 2.0,
        "max_concurrent_trades": 1,
        "stop_after_consecutive_losses": 2,
        "trading_sessions": ["london_ny_overlap"],
        "avoid_news_events": true
    },

    "trading_pairs": [
        "EURUSD", "GBPUSD", "USDJPY", "USDCHF",
        "AUDUSD", "NZDUSD", "USDCAD"
    ],

    "models": [
        {
            "name": "claude-opus-4-6",
            "basemodel": "anthropic/claude-opus-4-6",
            "signature": "claude-opus-forex-challenge",
            "enabled": true
        },
        {
            "name": "gpt-4.1",
            "basemodel": "gpt-4.1",
            "signature": "gpt-4.1-forex-challenge",
            "enabled": false
        },
        {
            "name": "deepseek-v3.1",
            "basemodel": "deepseek/deepseek-chat-v3.1",
            "signature": "deepseek-v3.1-forex-challenge",
            "enabled": false
        }
    ],

    "agent_config": {
        "max_steps": 50,
        "max_retries": 3,
        "base_delay": 2.0,
        "initial_cash": 20.0,
        "verbose": true
    },

    "mt4_mt5_config": {
        "backend": "simulation",
        "login": "${MT5_LOGIN}",
        "password": "${MT5_PASSWORD}",
        "server": "${MT5_SERVER}",
        "timeout": 10000
    },

    "risk_management": {
        "max_daily_loss_percent": 5.0,
        "max_total_drawdown_percent": 10.0,
        "require_sl_on_every_trade": true,
        "require_tp_on_every_trade": true,
        "max_sl_pips": 25,
        "min_rr_ratio": 1.0
    },

    "live_loop_config": {
        "enabled": false,
        "interval_seconds": 300,
        "trading_sessions": ["london_ny_overlap"]
    },

    "log_config": {
        "log_path": "./data/agent_data_forex"
    }
}
